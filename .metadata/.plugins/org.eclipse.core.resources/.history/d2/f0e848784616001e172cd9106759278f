package practice;

public class RotatedArray {

	public static void main(String[] args) {
		int[] a  = {7,8,9,4,5,6};
		int findPivot = findPivot(a);
		System.out.println(findPivot);
	}
	
	static int findPivot(int[] a) {
		
		int s = 0;
		
		int e = a.length-1;
		
		while(s<=e) {
			
			int mid = s+ (e-s)/2;
			
			if(a[mid]>a[mid+1]) {
				return mid;
			}
			if(a[mid]>a[s]) {
				s=mid+1;
			}
			else {
				e=mid-1;
			}
			
		}
		
		
		return -1;
	}
}
