package practice;

public class orderAgnosticBinarySearch {

	int binarySearch(int[] a, int target) {

		int s = 0;
		int e = a.length - 1;

		boolean isAsc = a[e] > a[s];

		while (s < e) {
			int mid = s + (e - s) / 2;
			if (a[target] == a[mid]) {
				return a[mid];
			}
			if (isAsc) {
				if (a[target] < a[mid]) {
					e = mid - 1;
				} else {
					s = mid + 1;
				}

			}else {
				if(a[target]>a[mid]) {
					e=mid-1;
				}else {
					s=mid+1;
				}
				
			
			}
		}

		return -1;
	}

	public static void main(String... args) {
		
		int a[]= {9,7,5,3,2,1};
		
		orderAgnosticBinarySearch o = new orderAgnosticBinarySearch();
		o.binarySearch(a, 9);
		
	}

}
